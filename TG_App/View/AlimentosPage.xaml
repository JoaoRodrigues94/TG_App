<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TG_App.View.AlimentosPage">
    <ContentPage.Content>
    <ScrollView>
      <StackLayout VerticalOptions="FillAndExpand">
        <Frame>
          <StackLayout Padding="0">
            <Label Text="Alimentos" TextColor="DarkRed" HorizontalOptions="Center" FontAttributes="Bold" />
            <Button Text="Cadastrar Alimento" Clicked="CadastrarAlimentoAction" TextColor="DarkCyan" HorizontalOptions="End"/>
          </StackLayout>
        </Frame>
      </StackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>